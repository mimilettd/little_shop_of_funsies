<!DOCTYPE html>
<head>
	<meta charset="utf-8">
	<title>Shop</title>
</head>
<body>
	<h3>Items:</h3>
	<div>
		<% @items.each do |item| %>
		<div>
			<p><strong><%= link_to item.title, item_path(item) %></strong></p>
			<p>Description: <%= item.description %></p>
			<p>Price:$ <%= item.price %></p>
			<img src=<%=item.image%>>
		</div>
			<% end %>
	</div>
</body>